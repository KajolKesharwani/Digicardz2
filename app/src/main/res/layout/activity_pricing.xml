                                app:layout_constraintTop_toBottomOf="@id/logotxt2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <TextView
                                android:id="@+id/updatetxt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free Content Updatable 5 Times Only"
                                android:textSize="17dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:drawableLeft="@drawable/tickmark"
                                android:textColor="@color/black"
                                app:layout_constraintTop_toBottomOf="@id/socialinttxt2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <TextView
                                android:id="@+id/brochuretxt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR / Download Brochure Integration"
